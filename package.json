{
  "name": "hapi-crud-promise",
  "version": "0.2.0",
  "description": "Easily create CRUD routes on a hapi server by providing a path and promises for each of the actions",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "NODE_ENV=test mocha --recursive -R spec",
    "posttest": "eslint .",
    "test-cov": "istanbul cover node_modules/.bin/_mocha -- --recursive -R spec",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gangstead/hapi-crud-promise.git"
  },
  "keywords": [
    "hapi",
    "promise",
    "crud"
  ],
  "author": "Gangstead",
  "license": "MIT",
  "devDependencies": {
    "bluebird": "^3.1.1",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "eslint-config-vinli": "^4.1.0",
    "eslint-plugin-mocha": "^1.1.0",
    "hapi": "^12.1.0",
    "hapi-auth-basic": "^4.1.0",
    "istanbul": "^0.4.2",
    "joi": "^7.2.1",
    "mocha": "^2.3.4"
  },
  "dependencies": {
    "lodash": "^4.0.0"
  },
  "engines": {
    "node": ">=4"
  }
}
